{
    "name": "Cidr Fermenter",
    "description": "Analyse cidr blocks",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "instructions/instructions.html",
        "default_icon": {
            "16": "media/logo-gradient-16.png",
            "48": "media/logo-gradient-48.png",
            "128": "media/logo-gradient-128.png"
        }
    },
    "permissions": [
        "contextMenus",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    }
}